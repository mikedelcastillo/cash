datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String  @id
  email String  @unique
  name  String?

  deactivated Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  chatMessages    ChatMessage[]
  userLogins      UserLogin[]
  trackingPeriods TrackingPeriod[]
}

model EmailCode {
  id    String @id
  email String
  code  String

  success Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model UserLogin {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model TrackingPeriod {
  id       String    @id
  currency String    @default("â‚±")
  start    DateTime  @default(now())
  end      DateTime?

  active Boolean @default(false)
  user   User    @relation(fields: [userId], references: [id])
  userId String

  periodBudget Int           @default(500)
  periodDays   Int           @default(7)
  periodOffset Int           @default(0)
  transactions Transaction[]
}

model Transaction {
  id String @id

  caption String?
  amount  Decimal @default(0)
  valid   Boolean @default(true)

  date DateTime @default(now())

  trackingPeriod   TrackingPeriod @relation(fields: [trackingPeriodId], references: [id])
  trackingPeriodId String

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model UserPlatform {
  id       Int          @id @default(autoincrement())
  platform ChatPlatform

  chatUserId String @unique

  lastActive DateTime @default(now())
  createdAt  DateTime @default(now())
}

model ChatMessage {
  id        String       @id @unique
  platform  ChatPlatform
  context   String
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime     @default(now())
}

enum ChatPlatform {
  DISCORD
  TELEGRAM
}
