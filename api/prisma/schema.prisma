datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id
  email    String  @unique
  username String?

  deactivated Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  chatMessages ChatMessage[]
  userLogins   UserLogin[]
}

model EmailCode {
  id    String @id
  email String
  code  String

  success Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model UserLogin {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model ChatMessage {
  id        String       @id @unique
  platform  ChatPlatform
  context   String
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime     @default(now())
}

enum ChatPlatform {
  DISCORD
  TELEGRAM
}
